<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/nbncolor"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastroVeiculo">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Logo and Titule -->
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="200dp">

                <ImageView
                    android:id="@+id/full"
                    android:layout_width="125dp"
                    android:layout_height="82dp"
                    android:background="@drawable/carro" />

                <TextView
                    android:fontFamily="sans-serif"
                    android:textSize="18dp"
                    android:textAlignment="center"
                    android:text="CAD. VEÃCULO"
                    android:textColor="@color/white"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- Layout Dinamica -->
            <LinearLayout
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:id="@+id/LayoutDinamico"
                android:visibility="visible"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Tipo de Combustivel -->
                <LinearLayout
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="30dp"
                        android:gravity="center_vertical"
                        android:text="TIPO:"
                        android:textColor="#1a8cce"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <RadioGroup
                        android:id="@+id/tipodeveiculos"
                        android:textSize="15dp"
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".28"
                        android:orientation="horizontal">
                        <RadioButton
                            android:id="@+id/carro"
                            android:layout_width="119dp"
                            android:layout_height="match_parent"
                            android:checked="true"
                            android:padding="3dp"
                            android:text="Carro"
                            android:onClick="radioVeiculo"
                            android:textColor="@color/white" />
                        <RadioButton
                            android:id="@+id/moto"
                            android:padding="3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="Moto"
                            android:onClick="radioVeiculo"
                            android:textColor="@color/white" />
                    </RadioGroup>


                </LinearLayout>

                <!-- MARCA -->
                <LinearLayout
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="30dp"
                        android:gravity="center_vertical"
                        android:text="MARCA:"
                        android:textColor="#1a8cce"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edit_marca"
                        android:inputType="textCapSentences"
                        android:textStyle="bold"
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:backgroundTint="@color/white"
                        android:gravity="center_vertical|center_horizontal"
                        android:textColor="#000"
                        android:textSize="15dp" />


                </LinearLayout>

                <!-- MODELO -->
                <LinearLayout
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="30dp"
                        android:gravity="center_vertical"
                        android:text="MODELO:"
                        android:textColor="#1a8cce"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edit_modelo"
                        android:inputType="textCapSentences"
                        android:textStyle="bold"
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:backgroundTint="@color/white"
                        android:gravity="center_vertical|center_horizontal"
                        android:textColor="#000"
                        android:textSize="15dp" />


                </LinearLayout>

                <!-- COR -->
                <LinearLayout
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="30dp"
                        android:gravity="center_vertical"
                        android:text="COR:"
                        android:textColor="#1a8cce"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edit_cor"
                        android:inputType="textCapWords"
                        android:textStyle="bold"
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:backgroundTint="@color/white"
                        android:gravity="center_vertical|center_horizontal"
                        android:textColor="#000"
                        android:textSize="15dp" />

                </LinearLayout>

                <!-- Ano -->
                <LinearLayout
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="30dp"
                        android:gravity="center_vertical"
                        android:text="ANO:"
                        android:textColor="#1a8cce"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edit_ano"
                        android:inputType="date"
                        android:textStyle="bold"
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:backgroundTint="@color/white"
                        android:gravity="center_vertical|center_horizontal"
                        android:textColor="#000"
                        android:textSize="15dp" />
                </LinearLayout>


                <!-- PLACA -->
                <LinearLayout
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="30dp"
                        android:gravity="center_vertical"
                        android:text="PLACA:"
                        android:textColor="#1a8cce"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edit_placa"
                        android:inputType="text"
                        android:textStyle="bold"
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:backgroundTint="@color/white"
                        android:gravity="center_vertical|center_horizontal"
                        android:textColor="#000"
                        android:textSize="15dp" />
                </LinearLayout>

                <!-- CHASSIS -->
                <LinearLayout
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="30dp"
                        android:gravity="center_vertical"
                        android:text="CHASSIS:"
                        android:textColor="#1a8cce"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edit_chassis"
                        android:inputType="text"
                        android:textStyle="bold"
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:backgroundTint="@color/white"
                        android:gravity="center_vertical|center_horizontal"
                        android:textColor="#000"
                        android:textSize="15dp" />


                </LinearLayout>

                <!-- roda -->
                <LinearLayout
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="30dp"
                        android:gravity="center_vertical"
                        android:text="RODA:"
                        android:textColor="#1a8cce"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edit_roda"
                        android:inputType="textCapWords"
                        android:textStyle="bold"
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:backgroundTint="@color/white"
                        android:gravity="center_vertical|center_horizontal"
                        android:textColor="#000"
                        android:textSize="15dp" />
                </LinearLayout>

                <!-- Tipo de Combustivel -->
                <LinearLayout
                    android:id="@+id/tipodeveiculo"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="30dp"
                        android:gravity="center_vertical"
                        android:text="COMB:"
                        android:textColor="#1a8cce"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <RadioGroup
                        android:id="@+id/tipodecombustivel"
                        android:textSize="15dp"
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".28"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/gasolina"
                            android:checked="true"
                            android:onClick="radioCombustivel"
                            android:padding="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Gas."
                            android:textColor="@color/white" />

                        <RadioButton
                            android:id="@+id/etanol"
                            android:onClick="radioCombustivel"
                            android:padding="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="Etanol"
                            android:textColor="@color/white" />

                        <RadioButton
                            android:id="@+id/diesel"
                            android:onClick="radioCombustivel"
                            android:padding="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="Diesel"
                            android:textColor="@color/white" />
                    </RadioGroup>
                </LinearLayout>

                <!-- Salvar -->
                <LinearLayout
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/btn_salvar_cadCarro"
                        android:background="#1a8cce"
                        android:textColor="@color/white"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_width="195dp"
                        android:layout_height="match_parent"
                        android:text="SALVAR">
                    </Button>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>