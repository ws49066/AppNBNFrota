<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/nbncolor"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".CadastroUsuario">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Logo and Titule -->
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/full"
                android:layout_width="97dp"
                android:layout_height="88dp"
                android:background="@drawable/caduser" />

            <TextView
                android:fontFamily="sans-serif"
                android:textSize="18dp"
                android:textAlignment="center"
                android:text="CAD. USUÁRIO"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Layout Dinamica -->
        <LinearLayout
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:id="@+id/LayoutDinamico"
            android:visibility="visible"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- KM ATUAL -->
            <LinearLayout
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:gravity="center_vertical"
                    android:text="NOME:"
                    android:textColor="#1a8cce"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edit_nome"
                    android:inputType="textCapSentences"
                    android:textStyle="bold"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:backgroundTint="@color/white"
                    android:gravity="center_vertical|center_horizontal"
                    android:textColor="#000"
                    android:textSize="15dp" />


            </LinearLayout>

            <!-- LITROS -->
            <LinearLayout
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:gravity="center_vertical"
                    android:text="CPF:"
                    android:textColor="#1a8cce"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edit_cpf"
                    android:inputType="number"
                    android:textStyle="bold"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:backgroundTint="@color/white"
                    android:gravity="center_vertical|center_horizontal"
                    android:textColor="#000"
                    android:textSize="15dp" />

            </LinearLayout>

            <!-- Numero da Requisição -->
            <LinearLayout
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:gravity="center_vertical"
                    android:text="CNH CAT:"
                    android:textColor="#1a8cce"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edit_cnh"
                    android:inputType="textCapSentences"
                    android:textStyle="bold"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:backgroundTint="@color/white"
                    android:gravity="center_vertical|center_horizontal"
                    android:textColor="#000"
                    android:textSize="15dp" />




            </LinearLayout>
            <!-- KM ATUAL -->
            <LinearLayout
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:gravity="center_vertical"
                    android:text="FUNÇÃO:"
                    android:textColor="#1a8cce"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edit_funcao"
                    android:inputType="textCapSentences"
                    android:textStyle="bold"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:backgroundTint="@color/white"
                    android:gravity="center_vertical|center_horizontal"
                    android:textColor="#000"
                    android:textSize="15dp" />


            </LinearLayout>

            <!-- LITROS -->
            <LinearLayout
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:gravity="center_vertical"
                    android:text="LOGIN:"
                    android:textColor="#1a8cce"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edit_login"
                    android:inputType="text"
                    android:textStyle="bold"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:backgroundTint="@color/white"
                    android:gravity="center_vertical|center_horizontal"
                    android:textColor="#000"
                    android:textSize="15dp" />


            </LinearLayout>

            <!-- Numero da Requisição -->
            <LinearLayout
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:gravity="center_vertical"
                    android:text="SENHA:"
                    android:textColor="#1a8cce"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edit_senha"
                    android:inputType="textPassword"
                    android:textStyle="bold"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:backgroundTint="@color/white"
                    android:gravity="center_vertical|center_horizontal"
                    android:textColor="#000"
                    android:textSize="15dp" />
            </LinearLayout>

            <!-- Tipo de Combustivel -->
            <LinearLayout
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:gravity="center_vertical"
                    android:text="TIPO:"
                    android:textColor="#1a8cce"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/radio_tipoUser"
                    android:textSize="15dp"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".28"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/admin"
                        android:layout_width="119dp"
                        android:layout_height="match_parent"
                        android:checked="true"
                        android:padding="3dp"
                        android:text="Admin"
                        android:onClick="onRadioButtonClicked"
                        android:textColor="@color/white" />

                    <RadioButton
                        android:id="@+id/user"
                        android:padding="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="User"
                        android:onClick="onRadioButtonClicked"
                        android:textColor="@color/white" />
                </RadioGroup>


            </LinearLayout>

            <!-- -->
            <LinearLayout
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btn_salvar_cadUser"
                    android:background="#1a8cce"
                    android:textColor="@color/white"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_width="195dp"
                    android:layout_height="match_parent"
                    android:text="SALVAR">
                </Button>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    </ScrollView>

</LinearLayout>