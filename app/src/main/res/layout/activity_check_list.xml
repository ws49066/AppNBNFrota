<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/nbncolor"
    tools:context=".CheckList">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Logo and Titule -->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="203dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/full"
                    android:layout_width="103dp"
                    android:layout_height="97dp"
                    android:background="@drawable/checklist" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="sans-serif"
                    android:text="CheckList"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="18dp" />
            </LinearLayout>


            <!-- Seach Placa -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="369dp"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="158dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="20dp"
                        android:gravity="center_vertical|right"
                        android:text="PLACA:"
                        android:textColor="#1a8cce"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginRight="40dp"
                        android:layout_weight=".28"
                        android:background="@drawable/backgroundspinner"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/spinnerPlacaManu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:backgroundTint="@color/white"
                            android:gravity="center"
                            android:spinnerMode="dropdown" />

                        <ImageView
                            android:layout_width="72dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_gravity="right"
                            android:layout_marginEnd="-1dp"
                            android:layout_marginBottom="0dp"
                            android:src="@drawable/dropdown" />
                    </RelativeLayout>


                </LinearLayout>
            </LinearLayout>


            <!-- Layout Dinamica -->
            <LinearLayout
                android:gravity="center"
                android:id="@+id/LayoutDinamico"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:visibility="invisible">
                <!-- Cor -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="45dp"
                        android:gravity="center_vertical"
                        android:text="MODELO:"
                        android:textColor="#1a8cce"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/modelo"
                        android:layout_width="330dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="40dp"
                        android:layout_weight=".28"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:textColor="@color/white"
                        android:textSize="15dp"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="45dp"
                        android:gravity="center_vertical"
                        android:text="COR:"
                        android:textColor="#1a8cce"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/cor"
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="40dp"
                        android:layout_weight=".28"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:textColor="@color/white"
                        android:textSize="15dp"></TextView>
                </LinearLayout>

                <!-- KM ATUAL -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="45dp"
                        android:gravity="center_vertical"
                        android:text="KM ATUAL:"
                        android:textColor="#1a8cce"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/kmatual"
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="40dp"
                        android:layout_weight=".28"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:textColor="@color/white"
                        android:textSize="15dp"/>
                </LinearLayout>

                <!-- Tipo de Combustivel -->
                <LinearLayout
                    android:layout_width="342dp"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="62dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="45dp"
                        android:gravity="center_vertical"
                        android:text="TIPO:"
                        android:textColor="#1a8cce"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <RadioGroup
                        android:id="@+id/tipo"
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".28"
                        android:orientation="horizontal"
                        android:textSize="15dp">

                        <RadioButton
                            android:id="@+id/entrada"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:checked="true"
                            android:padding="3dp"
                            android:text="ENTRADA"
                            android:textColor="@color/white" />

                        <RadioButton
                            android:id="@+id/saida"
                            android:layout_width="109dp"
                            android:layout_height="40dp"
                            android:padding="3dp"
                            android:text="SAIDA"
                            android:textColor="@color/white" />
                    </RadioGroup>


                </LinearLayout>

                <ScrollView
                    android:id="@+id/scrollList1"
                    android:layout_width="match_parent"
                    android:layout_height="800dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white">

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="4dp">

                            <TextView
                                android:layout_width="125dp"
                                android:layout_height="wrap_content"
                                android:text="ITEM"
                                android:textAlignment="center">

                            </TextView>

                        </TableRow>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="@color/colorPrimaryDark" />

                        <ListView
                            android:id="@+id/listview"
                            android:layout_width="match_parent"
                            android:layout_height="800dp"
                            android:scrollbars="horizontal|vertical"/>
                    </TableLayout>
                </ScrollView>
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btn_check"
                        android:layout_width="195dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:background="#1a8cce"
                        android:text="Confirmar"
                        android:textColor="@color/white"/>
                </LinearLayout>
                <!-- -->

                <ListView android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="30dp"
                    android:id="@+id/listEdit"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" />

                <LinearLayout
                    android:id="@+id/btn_layout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center">

                    <Button
                        android:layout_marginTop="20dp"
                        android:id="@+id/btn_finalizar"
                        android:layout_width="195dp"
                        android:layout_marginBottom="60dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:background="#1a8cce"
                        android:text="Finalizar"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>