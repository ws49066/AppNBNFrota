<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/nbncolor"
    tools:context=".AbastecimentoActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Logo and Titule -->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/full"
                    android:layout_width="97dp"
                    android:layout_height="88dp"
                    android:background="@drawable/fuel" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="sans-serif"
                    android:text="ABASTECIMENTO"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="18dp" />
            </LinearLayout>


            <!-- Seach Placa -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="369dp"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="158dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="20dp"
                        android:gravity="center_vertical|right"
                        android:text="PLACA:"
                        android:textColor="#1a8cce"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginRight="40dp"
                        android:layout_weight=".28"
                        android:background="@drawable/backgroundspinner"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/spinnerPlacaManu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:backgroundTint="@color/white"
                            android:gravity="center"
                            android:spinnerMode="dropdown" />

                        <ImageView
                            android:layout_width="72dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_gravity="right"
                            android:layout_marginEnd="-1dp"
                            android:layout_marginBottom="0dp"
                            android:src="@drawable/dropdown" />
                    </RelativeLayout>


                </LinearLayout>
            </LinearLayout>


            <!-- Layout Dinamica -->
            <LinearLayout
                android:gravity="center"
                android:id="@+id/LayoutDinamico"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:visibility="invisible">
                <!-- Cor -->
                <LinearLayout
                    android:layout_width="426dp"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="45dp"
                        android:gravity="center_vertical"
                        android:text="MODELO:"
                        android:textColor="#1a8cce"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/modelo"
                        android:layout_width="330dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="40dp"
                        android:layout_weight=".28"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:textColor="@color/white"
                        android:textSize="15dp"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="426dp"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="45dp"
                        android:gravity="center_vertical"
                        android:text="COR:"
                        android:textColor="#1a8cce"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/cor"
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="40dp"
                        android:layout_weight=".28"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:textColor="@color/white"
                        android:textSize="15dp"></TextView>


                </LinearLayout>

                <!-- Tipo de Combustivel -->
                <LinearLayout
                    android:layout_width="426dp"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="45dp"
                        android:gravity="center_vertical"
                        android:text="T. COMB:"
                        android:textColor="#1a8cce"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <RadioGroup
                        android:id="@+id/tipodecombustivel"
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".28"
                        android:orientation="horizontal"
                        android:textSize="15dp">

                        <RadioButton
                            android:id="@+id/gasolina"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:checked="true"
                            android:onClick="CombustivelRadio"
                            android:padding="3dp"
                            android:text="Gas."
                            android:textColor="@color/white" />

                        <RadioButton
                            android:id="@+id/etanol"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:onClick="CombustivelRadio"
                            android:padding="3dp"
                            android:text="Etanol"
                            android:textColor="@color/white" />

                        <RadioButton
                            android:id="@+id/diesel"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:onClick="CombustivelRadio"
                            android:padding="3dp"
                            android:text="Diesel"
                            android:textColor="@color/white" />
                    </RadioGroup>


                </LinearLayout>

                <!-- KM ATUAL -->
                <LinearLayout
                    android:layout_width="426dp"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="45dp"
                        android:gravity="center_vertical"
                        android:text="KM ATUAL:"
                        android:textColor="#1a8cce"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/kmatual"
                        android:layout_width="118dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:background="@color/white"
                        android:backgroundTint="@color/white"
                        android:gravity="center_vertical|center_horizontal"
                        android:inputType="number"
                        android:textColor="#000"
                        android:textSize="15dp"
                        android:textStyle="bold" />


                </LinearLayout>

                <!-- LITROS -->
                <LinearLayout
                    android:layout_width="426dp"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="45dp"
                        android:gravity="center_vertical"
                        android:text="LITROS:"
                        android:textColor="#1a8cce"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/litros"
                        android:layout_width="118dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:background="@color/white"
                        android:backgroundTint="@color/white"
                        android:gravity="center_vertical|center_horizontal"
                        android:inputType="number"
                        android:textColor="#000"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Numero da Requisição -->
                <LinearLayout
                    android:layout_width="426dp"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="45dp"
                        android:gravity="center_vertical"
                        android:text="N.REQ:"
                        android:textColor="#1a8cce"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/numeroRequisicao"
                        android:layout_width="118dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:background="@color/white"
                        android:backgroundTint="@color/white"
                        android:gravity="center_vertical|center_horizontal"
                        android:inputType="number"
                        android:textColor="#000"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Fotos -->
                <LinearLayout
                    android:layout_width="426dp"
                    android:layout_height="94dp">

                    <ImageView
                        android:id="@+id/ImgBtn_foto"
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:layout_margin="20dp"
                        android:src="@drawable/ic_baseline_camera_alt_24" />
                </LinearLayout>

                <!-- View das fotos confirmadas -->
                <LinearLayout
                    android:layout_width="426dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">


                    <LinearLayout
                        android:id="@+id/layout_gridmig"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="invisible">

                        <GridView
                            android:id="@+id/gridview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:clickable="true"
                            android:columnWidth="115dp"
                            android:drawSelectorOnTop="true"
                            android:numColumns="3"
                            android:verticalSpacing="10dp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- -->
                <LinearLayout
                    android:layout_width="426dp"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btn_salvar"
                        android:layout_width="195dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:background="#1a8cce"
                        android:text="SALVAR"
                        android:textColor="@color/white"></Button>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>


</LinearLayout>